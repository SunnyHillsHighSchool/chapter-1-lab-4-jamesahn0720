public interface LinearFunctionMethods
{
double getSlope()
double getYintercept();
double getRoot();

double getYvalue(double x); //return the y value corresponding to x
double getXvalue(double y); //return the x value corresponding to y
String toString();
}

public class LinearFunction implements LinearFunctionMethods{
   private double m; //this reperesents slope of line
   private double b; // this represents y intercept of line
  
   public LinearFunction(double m1,double b1) {
       this.m=m1;
       this.b=b1;
   }
  
   public double getSlope() {
       return this.m;
   }
   @Override
   public double getYIntercept() {
       return this.b;
   }
   
    public String toString() {
       String res="y = "+this.m+"x";
       if(this.b>=0) {
           res=res+" + "+this.b;
       }
       else {
           res=res+" - "+Math.abs(this.b);
       }
       return res;
   }
  

   public double getRoot() {
       if(this.m == 0) {
           return Integer.MAX_VALUE;
       }
       double result=this.b / this.m;
       return -result;
   }
  

   public double getYvalue(double x) {
       return (this.m * x)+this.b;
   }

   public double getXvalue(double y) {
       if(this.m == 0) {
           return Integer.MAX_VALUE;
       }
       return (y - this.b) / this.m;
   }
}
